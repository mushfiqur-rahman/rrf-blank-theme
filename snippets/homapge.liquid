<div class="pt-10 bg-[#f2f0f1]">
    <div class="container">
        <div class="flex items-center">
            <div class="w-1/2 pr-20">
                <h2 class="text-[64px] leading[64px] mb-8">FIND CLOTHES THAT MATCHES YOUR STYLE</h2>
                <div class="max-w-lg">
                    <div class="text-base mb-6">Browse through our diverse range of meticulously crafted garments, designed to bring out your individuality and cater to your sense of style.</div>
                    <a href="#" class="rounded-full px-12 py-2 text-white bg-black inline-block">Shop Now</a>
                </div>
                <div class="flex mt-8">
                    {% for i in (1..3) %}
                        <div class="w-1/3">
                            <div class="font-bold text-4xl">200+</div>
                            International Brands
                        </div>
                    {% endfor %}

                </div>
            </div>
            <div class="w-1/2 flex justify-end">
                <div>
                    <img src="{{ 'hero.jpeg' | asset_url }}" alt="">
                </div>
            </div>
        </div>
    </div>
</div>
{% comment %}Company Logo {% endcomment %}
<div class="bg-black py-10">
    <div class="container">
        <div class="flex">
            {% for i in (1..5) %}
                <div class="flex-1">
                    <img src="{{ 'versace.png' | asset_url }}" alt="">
                </div>
            {% endfor %}
        </div>
    </div>
</div>

{% comment %}Product List{% endcomment %}
<div class="py-20">
    <div class="container">
        <h2 class="text-center text-[48px] mb-8">NEW ARRIVALS</h2>

        <div class="flex flex-wrap -mx-4">
            {% for i in (1..4) %}
                <div class="w-1/4 px-4 single-product-box">
                    <div class="bg-gray-100 rounded-lg mb-6">
                        <img class="w-full" src="{{ 'product.png' | asset_url }}" alt="">
                        <h3 class="text-xl mb-2">Shirt with Type Details</h3>
                        <div class="flex items-center text-gray-500 mb-4">
                            <div class="flex mr-2">
                                {% for i in (1..5) %}
                                    <svg xmlns="http://www.w3.org/2000/svg" width="19" height="17" viewBox="0 0 19 17" fill="none">
                                        <path d="M9.24494 0.255005L11.8641 5.89491L18.0374 6.6431L13.4829 10.8769L14.679 16.9793L9.24494 13.956L3.8109 16.9793L5.00697 10.8769L0.452479 6.6431L6.62573 5.89491L9.24494 0.255005Z" fill="#FFC633"/>
                                    </svg>
                                {% endfor %}
                            </div>
                            4.5/5
                        </div>
                        <div class="text-2xl font-bold">$120</div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

{% comment %}Border{% endcomment %}
<div class=" w-full px-10 py-20">
    <div class="border border-gray-200"></div>
</div>

