<div class="pt-10 bg-[#f2f0f1]">
    <div class="container">
        <div class="flex items-center">
            <div class="w-1/2 pr-20">
                <h2 class="text-[64px] leading[64px] mb-8">FIND CLOTHES THAT MATCHES YOUR STYLE</h2>
                <div class="max-w-lg">
                    <div class="text-base mb-6">Browse through our diverse range of meticulously crafted garments, designed to bring out your individuality and cater to your sense of style.</div>
                    <a href="#" class="rounded-full px-12 py-2 text-white bg-black inline-block">Shop Now</a>
                </div>
                <div class="flex mt-8">
                    {% for i in (1..3) %}
                        <div class="w-1/3">
                            <div class="font-bold text-4xl">200+</div>
                            International Brands
                        </div>
                    {% endfor %}

                </div>
            </div>
            <div class="w-1/2 flex justify-end">
                <div>
                    <img src="{{ 'hero.jpeg' | asset_url }}" alt="">
                </div>
            </div>
        </div>
    </div>
</div>
{% comment %}Company Logo {% endcomment %}
<div class="bg-black py-10">
    <div class="container">
        <div class="flex">
            {% for i in (1..5) %}
                <div class="flex-1 items-center justify-center">
                    <img src="{{ 'company-' | append: i | append: '.png' | asset_url }}" alt="Company {{ i }}">
                </div>
            {% endfor %}
        </div>
    </div>
</div>

